<h1>Listing request_items</h1>

<table>
  <thead>
    <tr>
      <th>Requiest</th>
      <th>Item</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @request_items.each do |request_item| %>
      <tr>
        <td><%= request_item.requiest_id %></td>
        <td><%= request_item.item %></td>
        <td><%= link_to 'Show', request_item %></td>
        <td><%= link_to 'Edit', edit_request_item_path(request_item) %></td>
        <td><%= link_to 'Destroy', request_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

