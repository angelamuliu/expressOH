<h1>Listing user_requests</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Request</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_requests.each do |user_request| %>
      <tr>
        <td><%= user_request.user_id %></td>
        <td><%= user_request.request_id %></td>
        <td><%= link_to 'Show', user_request %></td>
        <td><%= link_to 'Edit', edit_user_request_path(user_request) %></td>
        <td><%= link_to 'Destroy', user_request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

