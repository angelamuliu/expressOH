&nbsp;
<h1>Listing items</h1>
&nbsp;
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Shop</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= number_to_currency(item.price) %></td>
        <td><%= item.shop.name %></td>
        <td><%= link_to 'Show', item %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item', new_item_path, :class => 'button tiny radius' %>
