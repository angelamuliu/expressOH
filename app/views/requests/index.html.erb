
<h3>Listing requests</h3>

<table>
  <thead>
    <tr>
      <th>Shop</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @unexpired_requests.each do |request| %>
      <tr>
        <td><%= request.id %></td>
        <td><%= request.shop.name %></td>
        <td><%= link_to 'Show', request %></td>
        <td><%= link_to 'Edit', edit_request_path(request) %></td>
        <!--<td><%# link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
      </tr>
    <% end %>
  </tbody>
</table>

