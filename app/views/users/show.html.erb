
<section class="row">
    <div class="small-centered small-12 large-8 columns">
        <h3>Your Account</h3>

        <h5>User Info</h5>
        <ul class="unordered lined">
            <li><span class="pink">Username: </span><%= @user.username %></li>
            <li><span class="pink">Email: </span><%= @user.email %></li>
            <li><span class="pink"><i class="fa fa-star"></i> Your Rating: </span><%= @user.ranking %>
            <li><span class="pink">Open requests: </span> <%= @user.requests.active.count %></li>
            <li><span class="pink">Open deliveries: </span> <%= @user.deliveries.active.count %></li>
        </ul>

    </div>
</section>

<section id="extra_info" class="row">
    <div class="small-centered small-12 large-8 columns">
        <h5>Since joining on <%= time_ago_in_words(@user.created_at) %> ago you have...</h5>

        <ul class="unordered lined">
            <li><h5><i class="fa fa-coffee"></i> Requested <%= @user.cups_requested %> items</h5> </li>
            <li><h5><i class="fa fa-truck"></i> Delivered <%= @user.cups_delivered %> orders</h5> </li>
        </ul>

        <%= link_to 'Return to home', "/", :class => "button secondary" %>
    </div>
</section>
