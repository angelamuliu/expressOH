
<% if current_user %>
    <section id="welcome">
        <h3>Welcome <%= current_user.username %>!</h3>
        <%= link_to "Request an Order", choose_shop_shops_path, class: 'button', id: 'request_button' %>
        <%= button_to "Claim an Order", "#", class: 'button', id: 'claim_button' %>
    </section>

    <section id="your_requests">
        <h3>Your requests</h3>
        <ul class="unordered">
        <% current_user.requests.each do |request| %>
            <li><span class="pink">(<%= request.shop.name %>)</span> 
            <% if request.items.length == 1%>
                <%= request.items.first.name %>
                <%= "Requested " + time_ago_in_words(request.items.first.created_at) + ' ago' %>
                <%= request.delivery.nil? ? 'Unclaimed' : "Being delivered by: " + request.delivery.user.username %>
            <% else %>
                <% request.items.each do |item| %>
                    <%= item.name %>
                    <%= "Requested " + time_ago_in_words(item.created_at) + ' ago' %>
                    <%= request.delivery.nil? ? 'Unclaimed' : "Being delivered by: " + request.delivery.user.username %>
                <% end %>
            <% end %>
            </li>
        <% end %>
        </ul>
    </section>

    <section id="your_deliveries">
        <h3>Your deliveries</h3>
    </section>
<% else %>
    <div class="bean-background"></div>
    <div class="intro">
        <section>
            <h2>Need Coffee? <br />
                No time?</h2>
            <h3>Let's fix that.</h3>
            <%= link_to "Sign Up", new_user_path, class: 'button', id: 'request_button' %>
            <%= button_to "Login", "/login", class: 'button', id: 'claim_button' %>
        </section>
    </div>


<% end %>

