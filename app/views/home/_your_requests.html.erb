<section id="your_requests">
    <h3>Your requests</h3>
    <% if @your_requests.size < 1 %>
        <p> You have no open requests for coffee at the moment. </p>
    <% else %>
        <ul class="unordered lined">
        <% @your_requests.each do |request| %>
            <li>
                <h5><span class="pink">
                    <% if !request.delivery.nil? %>
                        <i class="fa fa-truck"></i>
                    <% end %>
                    (<%= request.shop.name %>)</span> <%= request.item_names %>
                </h5>
                <p>
                    Requested <%= time_ago_in_words(request.items.first.created_at) %> ago, <%= Request.format_cost(request.tipped_total_cost()) %>
                    <br />
                    <div class="request_actions">
                        <% if request.delivery.nil? %>
                            Unclaimed
                            <%= link_to "Cancel", deactivate_request_path(request), class: 'button secondary' %>
                        <% else %>
                            Being delivered by <%= request.delivery.user.username %>
                                <%= link_to "Contact deliverer", "/", class: 'button primary'%>
                        <% end %>
                    </div>
                </p>
            </li>
        <% end %>
        </ul>
    <% end %>
</section>